{
  "name": "react-native-movesense",
  "version": "3.1.2",
  "description": "React Native Movesense library",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "react-native-movesense.podspec"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/Johan-dutoit/react-native-movesense",
  "author": "Johan-dutoit <jdutoit.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Johan-dutoit/react-native-movesense/issues"
  },
  "homepage": "https://github.com/Johan-dutoit/react-native-movesense#readme",
  "devDependencies": {
    "@babel/core": "7.10.3",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-proposal-optional-chaining": "7.10.3",
    "@babel/preset-env": "7.10.3",
    "@babel/preset-flow": "7.10.1",
    "@babel/preset-react": "7.10.1",
    "@babel/preset-typescript": "7.10.1",
    "@babel/runtime": "7.10.3",
    "@commitlint/config-conventional": "9.0.1",
    "@react-native-community/bob": "0.15.3",
    "@react-native-community/eslint-config": "2.0.0",
    "@release-it/conventional-changelog": "1.1.4",
    "@types/jest": "26.0.3",
    "@types/react": "16.9.41",
    "@types/react-native": "0.62.13",
    "babel-jest": "26.1.0",
    "commitlint": "9.0.1",
    "eslint": "7.3.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "pod-install": "0.1.7",
    "prettier": "2.0.5",
    "react": "~16.9.0",
    "react-native": "~0.62.3",
    "ts-jest": "26.1.1",
    "typescript": "3.9.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
